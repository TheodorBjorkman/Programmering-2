<Window x:Class="Lab2.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Lab2" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontSize="25">Vända på text</Label>
        <Label>Ange en text</Label>
        <TextBox Name="inputRuta" Margin="5" Height="50" Background="#FFF" FontStyle="italic" TextWrapping="WrapWithOverflow"/>
        <Button Margin="5" Width="200" Height="30" HorizontalAlignment="Left" Click="Reverse">
        Skicka!</Button>
        <TextBox Name="resultatRuta" Margin="5" Height="50" Background="#FFF" FontStyle="italic" TextWrapping="WrapWithOverflow" AcceptsReturn="True" IsReadOnly="True"/>
    </StackPanel>
</Window>